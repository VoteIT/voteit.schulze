<tal:main
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="voteit.schulze">
<div id="${field.oid}">
  <span class="starwidget starwidget-enabled">
  ${field.start_rename()}
  <a href="#" class="deselect-star" title="Clear selection"
    i18n:attributes="title" uid-function="deselect-star">X</a>
  <tal:loop tal:repeat="choice field.widget.values">
    <input tal:attributes="checked choice[0] == cstruct;
                           class string:${field.widget.css_class}"
         type="radio"
         name="${field.oid}"
         title="${choice[1]}"
         value="${choice[0]}"
         id="${field.oid}-${repeat.choice.index}" />
    <label for="${field.oid}-${repeat.choice.index}" title="${choice[1]}"></label>
  </tal:loop>
  ${field.end_rename()}
  </span>
  <div tal:content="structure field.request.render_proposal_text(field.schema.proposal)"></div>
  <p>&nbsp;</p>
</div>
<script type="text/javascript">
  deform.addCallback('${field.oid}', function(oid) {
    //Mark previous labels as selected
    function display_seleciton(radio_elem) {
      $(radio_elem).siblings('input[type="radio"]').removeClass('before-selection');
      $(radio_elem).prevAll('input[type="radio"]').addClass('before-selection');
    }
    //Bind events
    $('#' + oid + ' input[type="radio"]').on('change', function(event) {
      display_seleciton(event.currentTarget);
    });
    $('#' + oid + ' [uid-function="deselect-star"]').on('click', function(event) {
      event.preventDefault();
      $('#' + oid + ' input[type="radio"]:checked').attr('checked', false);
      $('#' + oid + ' input[type="radio"]').removeClass('before-selection');
    });
    //Initial load
    $('#' + oid + ' input[type="radio"]:checked').trigger('change');
  });
</script>
</tal:main>
